<%- include('partials/header') %>

<div class="col-9 col-lg-9 col-sm-12 col-md-12 sessionspace">

        <div class="row">
          <div class="col-lg-12">
          </div>
        </div>

          <%if(whichbutton == "addedexperience"){%>
            <div class="col-lg-12 sessiongreenbar">
              <div class="row greenbaritems">
                <div class="col-lg-2">
                  Company Name
                </div>
                <div class="col-lg-2">
                  Role
                </div>
                <div class="col-lg-2">
                  Start Date
                </div>
                <div class="col-lg-2">
                  End Date
                </div>
                <div class="col-lg-3">
                  Current Company
                </div>
              </div>
            </div>
            <%console.log(data); data.forEach((item, i) => { %>
            <div class="col-lg-12 sessionwhitebars">
              <div class="row">
                <div class="col-lg-2">
                  <h6 class="datetext experiencedetails"><%= item["company"] %></h6>
                </div>
                <div class="col-lg-2">
                  <h6 class="datetext experiencedetails"><%= item["jobTitle"] %></h6>
                </div>
                <div class="col-lg-2">
